<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,0,0,0.6) 0%, rgba(0,0,0,0.3) 50%), url('<%= image_path infos.picture %>'); height: 50vh; background-position: center;">
</div>
<div class="header-flat">
  <div class="container padded">
    <div class="row">
      <div class="col-xs-12 col-sm-6 col-sm-offset-1">
        <div class="header-flat-details">
          <div class="header-flat-owner  text-center">
            <%= image_tag infos.owner_picture, class: "avatar" %>
            <p><%= infos.name %></p>
          </div>
          <div class="header-flat-name">
            <h1><%= infos.summary %></h1>
            <p><%= infos.city %></p>
            <i class="fa fa-star" style="color: yellow"></i>
            <i class="fa fa-star" style="color: yellow"></i>
            <i class="fa fa-star" style="color: yellow"></i>
            <i class="fa fa-star" style="color: yellow"></i>
            <i class="fa fa-star" style="color: gray"></i>
          </div>
        </div>
      </div>
      <div class="col-xs-12 col-sm-4">
        <form action="#" >
          <h4>Book this flat</h3>
            <div class="form-group">
              <div class="row">
                <div class="col-xs-6">
                  <input type="text" class="form-control" placeholder="checkin" id="checkin">
                </div>
                <div class="col-xs-6">
                  <input type="text" class="form-control" placeholder="checkout">
                </div>
              </div>
            </div>
            <div class="form-group">
              <select name="" id="guests" class="form-control">
                <option value="1">1 guest</option>
                <option value="2">2 guests</option>
                <option value="3">3 guests</option>
              </select>
            </div>
            <input type="submit" class="btn btn-danger" value="Book it" style="width: 100%">
          </form>
        </div>
      </div>
    </div>
  </div>

  <div class="wrapper-grey padded">
    <div id="flat-description">
      <div class="container">
        <div class="row">
          <div class="col-xs-12 col-sm-10 col-sm-offset-1">
            <h2>About this flat</h2>
            <p>
             <%= infos.description %>
           </p>

           <hr>
           <div class="row" id="flat-data">
            <div class="col-xs-12 col-sm-2">
              The Space
            </div>
            <div class="col-xs-12 col-sm-4">
              <ul class="list-unstyled">
                <li>Accommodates:  <strong><%= infos.people %></strong></li>
                <li>Bathrooms:  <strong><%= infos.bathrooms %></strong></li>
                <li>Bed type:  <strong><%= infos.bed_type %></strong></li>
                <li>Bedrooms:  <strong><%= infos.rooms %></strong></li>
              </ul>
            </div>
            <div class="col-xs-12 col-sm-4">
              <ul class="list-unstyled">
                <li>Beds: <strong><%= infos.people %></strong></li>
                <li>Property type: <strong><%= infos.type %></strong></li>
                <li>Room type: <strong><%= infos.room_type %></strong></li>
              </ul>
            </div>
          </div>
          <hr>
          <div class="row" id="flat-data">
            <div class="col-xs-12 col-sm-2">
              Amenities
            </div>
            <div class="col-xs-12 col-sm-4">
              <ul class="list-unstyled">
                <li><i class="fa fa-cutlery"></i><strong>Kitchen</strong></li>
                <li><i class="fa fa-wifi"></i><strong>Wifi</strong></li>
              </ul>
            </div>
            <div class="col-xs-12 col-sm-4">
              <ul class="list-unstyled">
                <li><i class="fa fa-desktop"></i><strong>TV</strong></li>
                <li><i class="fa fa-glass"></i><strong>Welcome drink</strong></li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
